<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:id="@+id/slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ViewFlipper
            android:id="@+id/viewflipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoStart="true"
            android:flipInterval="2000" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/cover_page"
            android:id="@+id/i1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/cover_page"
            android:id="@+id/i2"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/cover_page"
            android:id="@+id/i3"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/bbb"
            android:id="@+id/i4"/>


</ViewFlipper>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/slider"
        android:orientation="vertical">
        <com.andexert.library.RippleView
            android:id="@+id/rv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:rv_centered="true"
            app:rv_rippleDuration="200">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/cv_about"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/about_vision">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT US"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/slide_title"
            android:id="@+id/txt_about"
            android:textColor="@android:color/white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/about"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/fab_margin"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        </com.andexert.library.RippleView>
        <com.andexert.library.RippleView
            android:id="@+id/rv_vision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:rv_centered="true"
            app:rv_rippleDuration="200">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv_vision"
            android:background="@drawable/about_vision">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/about_vision">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VISION"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/slide_title"
            android:id="@+id/txt_vision"
            android:layout_gravity="left"
            android:textColor="@android:color/white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vision"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/fab_margin"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        </com.andexert.library.RippleView>
        <com.andexert.library.RippleView
            android:id="@+id/rv_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            app:rv_centered="true"
            app:rv_rippleDuration="200">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
        <Button
            android:id="@+id/book"
            android:theme="@style/AppTheme.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white"
            android:background="@drawable/gradient"
            android:text="Book an Appointment"
            />

</RelativeLayout>
        </com.andexert.library.RippleView>
    </LinearLayout>

</RelativeLayout>
